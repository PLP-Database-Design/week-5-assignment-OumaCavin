<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patients</title>
    <link rel="stylesheet" href="../css/styles.css"> <!-- Add your stylesheet here -->
</head>
<body>
    <h1><%= isFiltered ? 'Filtered Patients' : 'All Patients' %></h1>
    <table>
        <thead>
            <tr>
                <% if (isFiltered) { %>
                    <th>Patient ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Date of Birth</th>
                    <th>Gender</th>
                    <th>Language</th>
                <% } else { %>
                    <th>Patient ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Date of Birth</th>
                <% } %>
            </tr>
        </thead>
        <tbody>
            <% patients.forEach(function(patient) { %>
                <tr>
                    <% if (isFiltered) { %>
                        <td><%= patient.patient_id %></td>
                        <td><%= patient.first_name %></td>
                        <td><%= patient.last_name %></td>
                        <td><%= patient.date_of_birth.toISOString().split('T')[0] %></td>
                        <td><%= patient.gender %></td>
                        <td><%= patient.language %></td>
                    <% } else { %>
                        <td><%= patient.patient_id %></td>
                        <td><%= patient.first_name %></td>
                        <td><%= patient.last_name %></td>
                        <td><%= patient.date_of_birth.toISOString().split('T')[0] %></td>
                    <% } %>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <a href="/">Go Back</a>
</body>
</html>
